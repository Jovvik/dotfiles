#!/usr/bin/env sh

# Syncs repositories and downloads updates, meant to be run as a cronjob.

ping -q -c 1 example.org > /dev/null || exit

notify-send -a "ðŸ“¦ Repository Sync" "Checking for package updates..."

sudo pacman -Syyuw --noconfirm || notify-send -a "ðŸ“¦ Repository Sync" "Error downloading updates." "Check your internet connection, if pacman is already running, or run update manually to see errors." && exit 1
pkill -RTMIN+8 "${STATUSBAR:-dwmblocks}"

if pacman -Qu | grep -v "\[ignored\]"
then
	notify-send -a "ðŸ“¦ Repository Sync" "Sync complete" "Updates available."
else
	notify-send -a "ðŸ“¦ Repository Sync" "Sync complete" "No new packages for update."
fi
