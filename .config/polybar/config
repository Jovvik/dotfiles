[module/updates-arch-combined]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/updates-arch-combined.sh
interval = 600
format-prefix = %{T3}Ôíû %{T-}
click-left = notify-send -a "üì¶ Package update" "Updating through yay" && yay -Syu --noconfirm --sudo pkexec --answerclean All --answerdiff None --answeredit None --answerupgrade None 2>&1 yay.log && notify-send -a "üì¶ Package update" "Succesfully updated!" && ~/.config/polybar/updates-arch-combined.sh || notify-send -a "üì¶ Package update" "Update failed" "$(tail yay.log)"
click-right = notify-send -a "üì¶ Package update" "Yay log" "$(tail yay.log)"

